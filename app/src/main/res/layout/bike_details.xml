<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:foregroundGravity="center"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_margin="25dp"
            android:id="@+id/add_bike_layout"
            android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_margin="5dp"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/textView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:padding="5dp"
           android:layout_gravity="center"
           android:layout_weight="1"
           android:text="BIKE DETAILS"
           android:textColor="@color/colorPrimary"
           android:textSize="20sp"
           android:textStyle="bold" />

       <ImageView
           android:id="@+id/edit_button"
           android:src="@drawable/edit_butt"
           android:layout_width="43dp"
           android:padding="10dp"
           android:layout_height="43dp"
           />


   </LinearLayout>

            <LinearLayout
                android:id="@+id/brand_name_layout"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Brand Name"
                    android:textColor="@color/themeDark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/brand_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/textDark"
                    android:text="Honda"
                    android:textSize="19sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/bike_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:paddingLeft="20dp"
                    android:text="Bike Name"
                    android:textColor="@color/themeDark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bike_name_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/textDark"
                    android:text="Honda"
                    android:textSize="19sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Bike Plate Number"
                    android:textColor="@color/themeDark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bike_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/textDark"
                    android:text="BR-243434"
                    android:layout_marginLeft="20dp"
                    android:textSize="19sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Bike Plate Type"
                    android:textColor="@color/themeDark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bike_plate_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/textDark"
                    android:text="Yellow"
                    android:layout_marginLeft="20dp"
                    android:textSize="19sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Rent Per Day"
                    android:textColor="@color/themeDark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bike_rent_per_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/textDark"
                    android:text="400"
                    android:textSize="19sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Rent Per Hour"
                    android:textColor="@color/themeDark"
                    android:textSize="18sp" />



                <TextView
                    android:id="@+id/bike_rent_per_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="50"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/textDark"
                    android:textSize="19sp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bike_image"
                    android:padding="10dp"
                    android:src="@drawable/bikesdefault"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Insurance Renewal Date"
                    android:textColor="@color/themeDark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/select_insurance_renewal_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/textDark"
                    android:layout_gravity="center"
                    android:text="25/3/2017"
                    android:textSize="19sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                 android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Periodic Service Date"
                    android:textColor="@color/themeDark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/select_service_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/textDark"
                    android:text="30/3/2017"
                    android:layout_marginLeft="20dp"
                    android:textSize="19sp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Service Renewal Month"
                    android:textColor="@color/themeDark"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/service_renewal_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textDark"
                    android:text="Yellow"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textSize="19sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>
