<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shadow"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewBikeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="10dp"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bike_name_my_bikes"
                android:layout_width="180sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Honda"
                android:textColor="@color/textDark"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/bike_plate_no_my_bikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="UB-BR247"
                android:textColor="@color/textDark"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/bike_info_butt"
                android:layout_width="43dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_height="43dp"
                app:srcCompat="@drawable/info_butt" />


            <ImageView
                android:id="@+id/delete_bike_butt"
                android:layout_width="50dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/delete_butt" />




        </LinearLayout>
    </LinearLayout>


</LinearLayout>
